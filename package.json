{
  "name": "@sardonyxwt/event-bus",
  "version": "1.2.0",
  "description": "Event Bus",
  "keywords": [
    "sclib",
    "event",
    "bus"
  ],
  "license": "MIT",
  "author": "sardonyx.wt@gmail.com",
  "contributors": [
    "Kirill Petkov <sardonyx.wt@gmail.com>"
  ],
  "files": [
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "dist/"
  ],
  "main": "dist/event-bus.min.js",
  "typings": "dist/@types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/sardonyxwt/event-bus.git"
  },
  "scripts": {
    "build": "cross-env NODE_ENV='production' webpack -p",
    "test": "cross-env-shell webpack -p && jest",
    "lint": "tslint -p . -c tslint.json --fix -t verbose",
    "deploy": "cross-env-shell npm run build && npm publish --access public"
  },
  "jest": {
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testRegex": "/(test|src)/.*\\.(test|spec)\\.(ts|js)$"
  },
  "dependencies": {
    "@sardonyxwt/utils": "2.1.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "@types/node": "^12.0.0",
    "clean-webpack-plugin": "2.0.1",
    "cross-env": "5.2.0",
    "jest": "^24.7.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.4.5",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5",
    "webpack": "^4.30.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.1"
  }
}
